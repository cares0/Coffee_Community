<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cares.p1.board.BoardDAO">
	
	<select id="list" resultType="BoardDTO" parameterType="Pager">
		SELECT * 
		FROM (SELECT ROWNUM R, B.* 
		      FROM (SELECT * FROM BOARD 
		      		WHERE NUM > 0 
		      		AND CATEGORY = 
		      		<choose>
		      			<when test="sort==1">
		      				1
		      			</when>
		      			<when test="sort==2">
		      				2
		      			</when>
		      			<when test="sort==3">
		      				3
		      			</when>
		      			<otherwise>
		      				4
		      			</otherwise>
		      		</choose>
		      		AND 
		      		<choose>
		      			<when test="kind=='col1'">
		      				TITLE
		      			</when>
		      			<when test="kind=='col2'">
		      				CONTENTS
		      			</when>
		      			<otherwise>
		      				WRITER
		      			</otherwise>
		      		</choose> 
		      		LIKE '%' || #{search} || '%' ORDER BY NUM DESC) B)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="getTotal" parameterType="Pager" resultType="Long">
		SELECT COUNT(NUM) FROM BOARD 
		WHERE NUM > 0 
		AND 
		<choose>
			<when test="kind=='col1'">
		    	TITLE
		    </when>
		    <when test="kind=='col2'">
		    	CONTENTS
		    </when>
		    <otherwise>
		    	WRITER
		    </otherwise>
		</choose> 
		LIKE '%' || #{search} || '%'
	</select>
	
	<select id="detail" parameterType="BoardDTO" resultType="BoardDTO">
		SELECT * FROM BOARD WHERE NUM = #{num}
	</select>

	<insert id="add" parameterType="BoardDTO">
		INSERT INTO BOARD VALUES (BOARD_SEQ.NEXTVAL, #{title}, #{contents}, SYSDATE, #{writer}, 0, 2)
	</insert>
	
	<delete id="delete" parameterType="BoardDTO">
		DELETE BOARD WHERE NUM = #{num}
	</delete>

	<update id="update" parameterType="BoardDTO">
		UPDATE BOARD SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
	</update>
	
</mapper>
